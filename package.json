{
  "name": "bun-saleor-app-boilerplate",
  "version": "0.0.1",
  "author": "Piotr Grundas <piotrgrundas@gmail.com>",
  "description": "Saleor App Boilerplate using Bun, Hono, and React",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/serve.ts",
    "build": "bun run scripts/build.ts",
    "build:client": "bun run scripts/build-client.ts",
    "preview": "bun run build && NODE_ENV=production bun dist/handler/entry-server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.985.0",
    "@cacheable/node-cache": "^2.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "@hookform/resolvers": "^5.2.2",
    "@saleor/app-sdk": "^1.7.0",
    "@saleor/macaw-ui": "^1.4.1",
    "@sentry/aws-serverless": "^10.38.0",
    "consola": "^3.4.2",
    "dataloader": "^2.2.3",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.18.0",
    "hono": "^4.11.8",
    "iti": "^0.8.0",
    "jose": "^6.1.3",
    "neverthrow": "^8.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-router": "^7.13.0",
    "react-router-dom": "^7.13.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/near-operation-file-preset": "^4.0.0",
    "@graphql-codegen/typed-document-node": "^6.1.5",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
